<%= form_for :search, url: posts_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :search %>
    <%= form.text_field :term, size: 10 %>
  </div>

  <div class="actions">
    <%= form.submit "Search Posts"%>
  </div>
<% end %>
<div class="note">
  <em>Leave search input blank to see all posts</em>
</div>